<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:id="@+id/fragment_1"
    android:background="@android:color/white"
     android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >


    <RelativeLayout
        android:layout_weight="2"
        android:id="@+id/encavbezado"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <androidx.cardview.widget.CardView
            android:layout_centerInParent="true"
            android:backgroundTint="#EBE6E6"
            app:cardCornerRadius="20dp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textfire"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="20dp"
                    android:text="Es importante mantenerse en resguardo y atender las recomendaciones de las autoridades.\nCuidate y cuida a tu familia ;)"
                    android:textColor="#33393A"
                    android:textSize="20dp" />
            </ScrollView>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <GridLayout
        android:layout_weight="8"
        android:id="@+id/mainGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:columnCount="2"

        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:padding="14dp">

        <!--Row1-->
        <androidx.cardview.widget.CardView
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            app:cardElevation="8dp"
            android:id="@+id/card1"


            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_rowWeight="1"
            app:cardCornerRadius="8dp"
            android:layout_width="0dp">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp"

                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content">


                <ImageButton
                     android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:layout_below="@+id/xd"
                    android:id="@+id/btn_mate"

                    android:src="@drawable/cua"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:text="Datos Mundiales"
                    android:textSize="14dp"
                    android:id="@+id/xd"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:textStyle="bold"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!--Row2-->
        <androidx.cardview.widget.CardView
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            app:cardElevation="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_rowWeight="1"
            android:id="@+id/card2"
            app:cardCornerRadius="8dp"
            android:layout_width="0dp">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp"

                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content">


                <ImageButton
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:clickable="true"
                    android:id="@+id/btn_quimica"
                     android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/noticias"
                    android:layout_below="@+id/xd2"
                    android:background="@android:color/transparent"
                     android:foreground="?attr/selectableItemBackground"
                    android:layout_height="match_parent" />
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:text="Noticias"
                    android:textSize="14dp"
                    android:id="@+id/xd2"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!--Row3-->
        <androidx.cardview.widget.CardView
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            app:cardElevation="8dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_rowWeight="1"
            app:cardCornerRadius="8dp"
            android:layout_width="0dp">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp"

                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content">


                <ImageButton
                     android:clickable="true"
                    android:layout_margin="5dp"
                    android:id="@+id/btn_calculo"
                    android:adjustViewBounds="true"
                    android:layout_below="@id/xd3"
                    android:src="@drawable/mejico"
                    android:scaleType="centerInside"
                    android:background="@android:color/transparent"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:text="Mapa de MÃ©xico"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:id="@+id/xd3"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <!--Row4-->
        <androidx.cardview.widget.CardView
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            app:cardElevation="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_rowWeight="1"
            app:cardCornerRadius="8dp"
            android:layout_width="0dp">


            <RelativeLayout

                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp"

                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_height="wrap_content">


                <ImageButton
                    android:clickable="true"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    android:id="@+id/btn_fisica"
                    android:src="@drawable/formar"
                    android:layout_below="@+id/xd4"
                    android:background="@android:color/transparent"
                     android:foreground="?attr/selectableItemBackground"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:text="Recomendaciones y Cuidados"

                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:id="@+id/xd4"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>

</LinearLayout>